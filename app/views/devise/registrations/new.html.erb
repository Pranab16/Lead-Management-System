<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
      <% if resource.errors.get(:name) %>
          <span class="error"><%= resource.errors.get(:name)[0] %></span>
      <%end%>
      <%= f.text_field :name, :placeholder => "Name", :autofocus => true %>
  </div>

  <div class="field">
      <% if resource.errors.get(:email) %>
          <span class="error"><%= resource.errors.get(:email)[0] %></span>
      <%end%>
      <%= f.email_field :email, :placeholder => "Email" %>
  </div>

  <div class="field">
      <% if resource.errors.get(:password) %>
          <span class="error"><%= resource.errors.get(:password)[0] %></span>
      <%end%>
      <%= f.password_field :password, :placeholder => "Password" %>
  </div>

  <div class="field">
      <% if resource.errors.get(:password_confirmation) %>
          <span class="error"><%= resource.errors.get(:password_confirmation)[0] %></span>
      <%end%>
      <%= f.password_field :password_confirmation, :placeholder => "Confirm Password " %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
